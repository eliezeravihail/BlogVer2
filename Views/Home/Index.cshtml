@model IEnumerable<BlogVer2.Post>
@{
    ViewData["Title"] = "דף בית";
}
@{
    if (Model.Count<Post>() > 0)
    {

        Post item = Model.Last<Post>();// ElementAt<Post>(Model.Count<Post>() - 1);
        <div class="p">
            <h1>הבלוג הטכני</h1>
       
            

              <article>
                  <div id="carouselExampleIndicators" data-interval="false" class="carousel slide" data-ride="carousel" style="height:500px; background-color:black; margin-top:50px; opacity:0.3">
                      <ol class="carousel-indicators">
                          @for (int i = 0; i < Model.Count(); i++)
                          {
                              @if (i == 0)
                              {
                                  <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="active"></li>
                              }
                              <li data-target="#carouselExampleIndicators" data-slide-to="@i"></li>
                          }
                      </ol>
                      <div class="carousel-inner">
                          @for (int i = 0; i < Model.Count(); i++)
                          {
                              @if (i == 0)
                              {
                                  <!-- change this item  לשנות את האלמנט הזה-->
                                  <div class="carousel-item active">
                                      <div class="carousel-caption d-none d-md-block" style="position:static">
                                          <h5>@Model.ElementAt(i).Title</h5>
                                          <p>@Model.ElementAt(i).BodyText</p>
                                      </div>
                                  </div>
                              }
                              <!-- change this item accordingly ולשנות את זה בהתאם-->
                              <div class="carousel-item">
                                  <div class="carousel-caption d-none d-md-block" style="position:static">
                                      <h5>@Model.ElementAt(i).Title</h5>
                                      <p>@Model.ElementAt(i).BodyText</p>
                                  </div>
                              </div>
                          }



                      </div>
                      <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                      </a>
                      <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                          <span class="carousel-control-next-icon" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                      </a>
                  </div>
                  

              </article>

            </div>

    }
}

